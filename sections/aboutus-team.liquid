<div data-section-id="{{ section.id }}"   data-section-type="aboutus-wrap" class="aboutus-wrap ourteam_wrap">
  <div class="section-header">   
    {% if section.settings.title != blank %}
    <h2 class="tt-title" style="color:{{ section.settings.title_color }}">{{ section.settings.title }}</h2>  
    {% endif %}
    <div class="subtitle" style="color:{{ section.settings.subtitle_color }}">{{ section.settings.subtitle }}</div>
  </div>
  <div class="our_team">
    {% if section.blocks.size > 0 %} 
    <ul class="ourteam_slider owl-theme owl-carousel" data-column="{{ section.settings.ourteam_column }}"> 
      {% for block in section.blocks %}
      <li class="teammember-item">
        <div class="teammember-content">
          <div class="ourteam-image-wrap">
            <div class="ourteam-image">
              <img loading="lazy" src="{{  block.settings.image_1 | img_url: "master" }}" alt="{{  block.settings.image_heading }}" />
            </div>
            <ul class="teammember-social-profile"> 
              <li class="facebook">
                <a href="{% if block.settings.facebook != blank %} {{ block.settings.facebook }} {% else %}#{% endif %}"> 
                  <i class="mdi mdi-facebook"></i> 
                </a> 
              </li>
              <li class="twitter">
                <a href="{% if block.settings.twitter != blank %} {{ block.settings.twitter }} {% else %}#{% endif %}">
                 <span class="mdi mdi-twitter" aria-hidden="true">
  <svg class="icon icon-twitter" viewBox="0 0 20 20" style="width: 15px;height: auto;margin-top: 7px;align-items: center;justify-content: center;display: inline-block;">
    <path fill="currentColor" fill-rule="evenodd" d="M7.273 2.8 10.8 7.822 15.218 2.8h1.768l-5.4 6.139 5.799 8.254h-4.658l-3.73-5.31-4.671 5.31H2.558l5.654-6.427L2.615 2.8zm6.242 13.125L5.07 4.109h1.405l8.446 11.816z" clip-rule="evenodd"></path>
</svg>
   </span>
                </a> 
              </li>
              <li class="instagram"> 
                <a href="{% if block.settings.instagram != blank %} {{ block.settings.instagram }} {% else %}#{% endif %}"> 
                  <i class="mdi mdi-instagram"></i> 
                </a> 
              </li>
            </ul>
          </div>
          <div class="teammember-meta">
            <div class="teammember-inner">
              <div class="teammember-meta-inner">
                {% if block.settings.author_name != blank %}
                <div class="teammember-title">{{ block.settings.author_name }}</div>
                {% endif %}
                {% if block.settings.author_designation != blank %}
                <p class="teammember-position">{{ block.settings.author_designation }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </li>
      {% endfor %}
    </ul>      
    {% endif %}
  </div>
</div>
{% schema %}
{
"name": "Our Team",
"settings": [
{
